<?xml version="1.0" encoding="UTF-8"?>
<!-- Set these VM properties in your IDE debugger -Djava.util.logging.manager=org.jboss.logmanager.LogManager 
	-Djboss.home=target/wildfly-8.1.0.Final -->
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>biz.suckow</groupId>
	<artifactId>fuel</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>
	<organization>
		<name>Suckow.biz</name>
		<url>http://www.suckow.biz</url>
	</organization>
	<url>https://bitbucket.org/tsuckow/fuel</url>
	<scm>
		<url>https://bitbucket.org/tsuckow/fuel</url>
		<connection>git@bitbucket.org:tsuckow/fuel.git</connection>
		<developerConnection>git@bitbucket.org:tsuckow/fuel.git</developerConnection>
		<tag>master</tag>
	</scm>
	<ciManagement>
		<system>Drone.io</system>
		<url>https://drone.io/bitbucket.org/tsuckow/fuel</url>
	</ciManagement>
	<issueManagement>
		<url>https://bitbucket.org/tsuckow/fuel/issues</url>
		<system>Bitbucket.org</system>
	</issueManagement>
	<name>fuel</name>
	<description>A software to track fuel consumptions of vehicles.</description>
	<inceptionYear>2014</inceptionYear>
	<developers>
		<developer>
			<name>Tobias Suckow</name>
			<email>tobias@suckow.biz</email>
		</developer>
	</developers>
	<licenses>
		<license>
			<name>Apache License, Version 2.0</name>
			<distribution>repo</distribution>
			<url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
		</license>
	</licenses>
	<properties>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>
		<failOnMissingWebXml>false</failOnMissingWebXml>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
		<jboss.home>${project.basedir}/target/wildfly-8.1.0.Final</jboss.home>
		<version.guava>18.0</version.guava>
		<version.arquillian-bom>1.1.5.Final</version.arquillian-bom>
		<version.arquillian-suite-extension>1.1.2</version.arquillian-suite-extension>
		<version.arquillian-transaction>1.0.1.Final</version.arquillian-transaction>
		<version.assertj>1.7.0</version.assertj>
		<version.assertj-guava>1.3.0</version.assertj-guava>
		<version.easymock>3.2</version.easymock>
		<version.maven-compiler-plugin>2.3.2</version.maven-compiler-plugin>
		<version.maven-eclipse-plugin>2.9</version.maven-eclipse-plugin>
		<version.maven-dependency-plugin>2.9</version.maven-dependency-plugin>
		<version.maven-surefire-plugin>2.17</version.maven-surefire-plugin>
		<version.maven-failsafe-plugin>2.17</version.maven-failsafe-plugin>
		<version.maven-war-plugin>2.1.1</version.maven-war-plugin>
		<version.shrinkwrap-resolver>2.1.1</version.shrinkwrap-resolver>
		<version.testng>6.8.8</version.testng>
		<version.wildfly-arquillian>8.1.0.Final</version.wildfly-arquillian>
		<version.wildfly-dist>8.1.0.Final</version.wildfly-dist>
		<version.hibernate-core>4.3.7.Final</version.hibernate-core>
		<version.hibernate-entitymanager>4.3.7.Final</version.hibernate-entitymanager>
		<version.hibernate-validator>5.1.3.Final</version.hibernate-validator>
	</properties>
	<dependencyManagement>
		<dependencies>
			<!-- Set up Arquillian is a pain so shrinkwrap resolver helps by slurping 
				dependencies. Must go before Arquillian. -->
			<dependency>
				<groupId>org.jboss.shrinkwrap.resolver</groupId>
				<artifactId>shrinkwrap-resolver-depchain</artifactId>
				<version>${version.shrinkwrap-resolver}</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
			<!-- Have integration tests. Import the Bill Of Material, or version matrix, 
				for Arquillianâ€™s transitive dependencies -->
			<dependency>
				<groupId>org.jboss.arquillian</groupId>
				<artifactId>arquillian-bom</artifactId>
				<version>${version.arquillian-bom}</version>
				<scope>import</scope>
				<type>pom</type>
			</dependency>
		</dependencies>
	</dependencyManagement>
	<build>
		<finalName>fuel</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${version.maven-compiler-plugin}</version>
				<configuration>
					<showDeprecation>true</showDeprecation>
				</configuration>
			</plugin>
			<!-- Download docs and source on mvn eclipse:eclipse -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>${version.maven-eclipse-plugin}</version>
				<configuration>
					<!-- mvn eclipse:eclipse eclipse:configure-workspace -->
					<additionalConfig>
						<file>
							<name>.settings/org.eclipse.jdt.ui.prefs</name>
							<location>${basedir}/ide/eclipse/org.eclipse.jdt.ui.prefs</location>
						</file>
						<file>
							<name>.settings/org.eclipse.jdt.core.prefs</name>
							<location>${basedir}/ide/eclipse/org.eclipse.jdt.core.prefs</location>
						</file>
					</additionalConfig>
					<downloadSources>true</downloadSources>
					<downloadJavadocs>true</downloadJavadocs>
					<workspace>${basedir}</workspace>
				</configuration>
			</plugin>
			<!-- Added to support integration tests during $ mvn verify -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>${version.maven-failsafe-plugin}</version>
				<executions>
					<execution>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<forkCount>1</forkCount>
					<reuseForks>true</reuseForks>
					<systemPropertyVariables>
						<java.util.logging.manager>org.jboss.logmanager.LogManager</java.util.logging.manager>
						<jboss.home>${jboss.home}</jboss.home>
						<redirectTestOutputToFile>false</redirectTestOutputToFile>
					</systemPropertyVariables>
				</configuration>
			</plugin>
			<!-- Added to support execution of unit test during $ mvn test -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>${version.maven-surefire-plugin}</version>
			</plugin>
			<!-- Intentionally added to prepare wildfly for integration tests. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>${version.maven-dependency-plugin}</version>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.wildfly</groupId>
									<artifactId>wildfly-dist</artifactId>
									<version>${version.wildfly-dist}</version>
									<type>zip</type>
									<overWrite>false</overWrite>
									<outputDirectory>target</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>java.net</id>
			<url>http://www.mvnrepository.com/</url>
		</repository>
	</repositories>
	<dependencies>
		<!-- This is a java ee 7 project. -->
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<version>7.0</version>
			<scope>provided</scope>
		</dependency>
		<!-- Intentionally added to have Optionals support. -->
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>${version.guava}</version>
		</dependency>
		<!-- The core O/RM functionality as provided by Hibernate -->
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-core</artifactId>
			<version>${version.hibernate-core}</version>
		</dependency>
		<!-- Hibernate O/RM implementation of the JPA specification -->
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-entitymanager</artifactId>
			<version>${version.hibernate-entitymanager}</version>
		</dependency>
		<!-- Hibernate's Bean Validation (JSR-303) reference implementation. -->
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-validator</artifactId>
			<version>${version.hibernate-validator}</version>
		</dependency>
		<!-- TEST DEPENDENCIES -->
		<!-- Arquillian TestNG integration. -->
		<dependency>
			<groupId>org.jboss.arquillian.testng</groupId>
			<artifactId>arquillian-testng-container</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- Added to support the use of transations for tests (e.g. rollback). -->
		<dependency>
			<groupId>org.jboss.arquillian.extension</groupId>
			<artifactId>arquillian-transaction-jta</artifactId>
			<version>${version.arquillian-transaction}</version>
			<scope>test</scope>
		</dependency>
		<!-- Added to have an Arquillian WildFly 8 embedded container adapter. -->
		<dependency>
			<groupId>org.wildfly</groupId>
			<artifactId>wildfly-arquillian-container-embedded</artifactId>
			<version>${version.wildfly-arquillian}</version>
			<scope>test</scope>
		</dependency>
		<!-- Added to have an Arquillian WildFly 8 container runtime. -->
		<!-- https://docs.jboss.org/author/display/ARQ/WildFly+8.1.0+-+Embedded -->
		<dependency>
			<groupId>org.wildfly</groupId>
			<artifactId>wildfly-embedded</artifactId>
			<version>${version.wildfly-arquillian}</version>
			<scope>test</scope>
		</dependency>
		<!-- Added to ease the procedure of creating a .war that Arquillian deploys 
			for testing. -->
		<dependency>
			<groupId>org.jboss.shrinkwrap.resolver</groupId>
			<artifactId>shrinkwrap-resolver-depchain</artifactId>
			<scope>test</scope>
			<type>pom</type>
		</dependency>
		<!-- Maven support for shrinkwrap. -->
		<dependency>
			<groupId>org.jboss.shrinkwrap.resolver</groupId>
			<artifactId>shrinkwrap-resolver-impl-maven</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- Support mocking. -->
		<dependency>
			<groupId>org.easymock</groupId>
			<artifactId>easymock</artifactId>
			<version>${version.easymock}</version>
			<scope>test</scope>
		</dependency>
		<!-- Have fluent matcher API for testing. -->
		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<version>${version.assertj}</version>
			<scope>test</scope>
		</dependency>
		<!-- Add guava support to assertj matcher. -->
		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-guava</artifactId>
			<version>${version.assertj-guava}</version>
			<scope>test</scope>
		</dependency>
		<!-- Have a single deployment for all tests and avoid that for every IT 
			a new server instance is launched. -->
		<dependency>
			<groupId>org.eu.ingwar.tools</groupId>
			<artifactId>arquillian-suite-extension</artifactId>
			<version>${version.arquillian-suite-extension}</version>
			<scope>test</scope>
		</dependency>
		<!-- Expecting persistence exceptions requires H2 dependency because H2 
			is used for testing. -->
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.2.140</version>
			<scope>test</scope>
		</dependency>
		<!-- Intentionally added to write TestNG tests. -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>${version.testng}</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>junit</groupId>
					<artifactId>junit</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
</project>